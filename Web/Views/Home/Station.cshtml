@{
    ViewBag.Title = ViewBag.StationName;
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fa icon-@ViewBag.StationName"></i> @ViewBag.StationName
    </div>
    <div class="card-block">
        <div class="row" style="min-height:300px">
            <table class="table table-striped table-condensed" id="res">
                <thead>
                    <tr>
                        <th>Namn</th>
                        <th>Klasse</th>
                        <th>Total</th>
                        <th>Etappe</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: results">
                    <tr data-bind="css: {'info' : ($data.Position == 1), 'warning' : ($data.Position == 2), 'success' : ($data.Position == 3)}">
                        <td>
                            <span data-bind="text: Startnumber" class="badge badge-default"></span>
                            <span data-bind="visible:Team"><span data-bind="text:Team"></span> : </span><span data-bind="text: Name"></span>
                        </td>
                        <td>
                            <span data-bind="text: Position" class="badge badge-pill badge-info"></span>
                            <span data-bind="text: Class"></span>
                        </td>
                        <td><span data-bind="text: Total"></span></td>
                        <td><span data-bind="text: Time"></span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    globalStationId = '@ViewBag.StationId';
                </script>
                <script src="~/Scripts/station.js"></script>
}
