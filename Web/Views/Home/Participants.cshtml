@using EmitReaderLib.Model;

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>#</th>
            <th>Namn</th>
            <th>Klasse</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Participant p in KjeringiData.TheRace.Instance.Participants.OrderBy(p => p.Startnumber))
        {
            <tr>
                <td>@p.Startnumber</td>
                <td>@p.Name</td>
                <td>
                    @if (p.IsTeam)
                    {
                        <ul>
                            @for (int i = 0; i < p.TeamMembers.Count; i++)
                            {
                                <li>
                                    @p.TeamMembers[i]
                                @if (p.Telephone.Count > i)
                                {
                                    <span>(@p.Telephone[i])</span>
                                }
                            </li>
                            }
                        </ul>
                    }
                    else
                    {
                        @String.Join(",", p.Telephone)
                    }
                </td>
                <td>
                    @foreach (ParticipantClass c in p.Classes)
                    {
                        <li>@c.Name</li>
                    }
                </td>
                <td>@p.EmitID</td>
            </tr>
        }
    </tbody>
</table>
